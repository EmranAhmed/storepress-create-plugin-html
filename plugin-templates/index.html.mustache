<script src="./build/externals/scripts/react-jsx-runtime.js"></script>
<script src="./build/externals/scripts/wp-element.js"></script>
<script src="./build/react-example.js"></script>

<script src="./build/storepress-utils.js"></script>
<script src="./build/script-example.js"></script>

<script type="module" src="./build/interactive-example.js"></script>

</body>
</html>
